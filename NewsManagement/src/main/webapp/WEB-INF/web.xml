<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-name>NewsManagement</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>by.htp.ex.controller.FrontController</servlet-class>
		<multipart-config>
			<location></location>
		</multipart-config>
	</servlet>

	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>by.htp.ex.controller.listener.ContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>Folder</filter-name>
		<filter-class>by.htp.ex.controller.filter.FolderFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>Folder</filter-name>
		<url-pattern>/uploaded-files/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>Encoding</filter-name>
		<filter-class>by.htp.ex.controller.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Encoding</filter-name>
		<url-pattern>/controller</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>Local</filter-name>
		<filter-class>by.htp.ex.controller.filter.LocalFilter</filter-class>
		<init-param>
			<param-name>local</param-name>
			<param-value>en</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Local</filter-name>
		<url-pattern>/controller</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>Error</filter-name>
		<filter-class>by.htp.ex.controller.filter.ErrorFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>Error</filter-name>
		<url-pattern>/controller</url-pattern>
	</filter-mapping>
	
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error.jsp</location>
	</error-page>
	


</web-app>